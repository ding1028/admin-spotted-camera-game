extends ../layout/layout.pug

block content
  .row
    .col-md-12
      h1.page-header Create New Badge
  .row(ng-show="isSaving")
    .col-md-12
      include ../common/spinner.pug
  div
    .row
      .col-md-12
        include ./form.pug
    .row
      .col-md-12
        .buttons.text-right
          a.btn.btn-default(href="/badges") Cancel
          button.btn.btn-primary(ng-click="createBadge()" ng-disabled="badgeForm.$invalid || isSaving") Create
